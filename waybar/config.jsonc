  "custom/network": {
    "exec": "~/.config/waybar/scripts/custom_network.sh",
    "interval": 30,
    "format": "{text}",
    "on-click": "~/.config/waybar/scripts/network_menu.sh",
    "return-type": "json",
    "tooltip-format": "{tooltip}"
  },
  "pulseaudio": {
    "format": "{icon}",
    "format-muted": "Ôë¶",
    "format-icons": {
      "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"],
    },
    "tooltip": false,
    "on-click": "pavucontrol",
  },
  "custom/bluetooth": {
    "format": "Ôäî",
    "exec": "bluetoothctl show | grep -q 'Powered: yes' && echo 'Ôäî' || echo 'Û∞Ç≤'",
    "interval": 5,
    "on-click": "blueman-manager",
  },
  "custom/notes": {
